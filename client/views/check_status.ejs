<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="status.css">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">

</head>
<body>
    <section>
        <!--for demo wrap-->
        <h1 class="text-4xl italic">APPOINTMENT STATUS</h1>
        <h2 class="text-3xl italic text-white">Client Name :- <%= name %></h2>
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Date</th>
                <th>Reason</th>
                <th>Status</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0" class="text-2xl text-white">
            <tbody>
              <% for (let i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= data[i].pet_name %></td>
                  <td><%= data[i].pet_id %> </td>
                  <td><%= data[i].appointment_date %></td>
                  <td><%= data[i].reason %></td>
                  <td><%= data[i].status1 %></td>
                </tr>
            <% } %>
            </tbody>
          </table>
        </div>
      </section>
      <form action="/logged/home" method="get" class="flex justify-between items-center">
        <button type="submit" class="text-2xl text-white bg-blue-500 rounded-3xl overflow-hidden p-4">Redirect to Home page</button>
      </form>
</body>
</html>